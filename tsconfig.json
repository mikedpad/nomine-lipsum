{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2020",
    "lib": ["es2020", "DOM"],
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}
