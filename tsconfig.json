{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es2020",
    "lib": ["es2020", "DOM"],
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "allowUnusedLabels": false,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "strict": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "esnext",
      "target": "esnext"
    }
  },
  "include": ["src/*", "src/data/*", "src/types/*"],
  "exclude": ["node_modules", "lib"]
}
