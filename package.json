{
  "name": "nomine-lipsum",
  "version": "2.1.7",
  "author": "Michael Daniel Padilla <michaeldpadilla@gmail.com> (https://mikedpad.com)",
  "description": "A random name generator of the most popular names in the USA.",
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": ["lib/**/*"],
  "keywords": ["lorem", "ipsum", "placeholder", "name", "generator", "faker", "data"],
  "repository": {
    "type": "git",
    "url": "git://github.com/mikedpad/nomine-lipsum.git"
  },
  "scripts": {
    "lint": "eslint --format=pretty 'src/**/*.{ts,tsx}'",
    "test": "jest src/",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "build": "rm -rf lib && tsc -p . && rm -rf lib/__tests__",
    "prepare": "npm run build"
  },
  "jest": {
    "errorOnDeprecated": true,
    "preset": "ts-jest",
    "testEnvironment": "node",
    "verbose": true,
    "moduleFileExtensions": ["js", "json", "jsx", "ts", "d.ts", "tsx", "node"]
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^15.6.2",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.2.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-formatter-pretty": "^4.0.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^27.0.3",
    "prettier": "^2.1.2",
    "ts-jest": "^27.0.2",
    "typescript": "^4.0.5"
  }
}
